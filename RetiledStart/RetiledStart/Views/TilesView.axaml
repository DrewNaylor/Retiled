			<Button Classes="StartTile" Content="{Binding Greeting}" Background="#0050ef" Foreground="White" Width="150" Height="150" Margin="5"/>-->

			</WrapPanel>
			<Button Height="30" Width="30" Content="->" Grid.Row="1"
					HorizontalAlignment="Right"
					HorizontalContentAlignment="Center"
					VerticalContentAlignment="Center"
					Margin="0,10,20,20"
					Background="Black"
					Foreground="White"
					BorderThickness="2"
					BorderBrush="White"
					Padding="0"
					FontSize="20">
				<Button.Styles>
					<Style Selector="Button /template/ ContentPresenter">
						<!-- Set button corner radius so it's a circle. -->
						<Setter Property="CornerRadius" Value="90" />
					</Style>
				</Button.Styles>
			</Button>
		</Grid>
	</ScrollViewer>
	
</UserControl>
